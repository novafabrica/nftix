  <% tickets.each do |ticket| %>
  <div id="ticket-#{ticket.id}" class="ticket clearfix">
    <div class='number'>
      <small>#</small><%= ticket.id %>
    </div>
    <div class='ticket-content'>
      <div class="btn-group">
        <a class="status btn dropdown-toggle" data-toggle="dropdown" href="#">
          <%= ticket.status %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <!-- dropdown menu links -->
        </ul>
      </div>
      <%= assignment_chooser(ticket)  if ticket.creator == @current_user %>
      <%= ticket_status_chooser(ticket, {:classes => 'ticket-status-button no-follow'}) %>
      <header><h1 class='lead'><%= link_to ticket.name, ticket_path(ticket) %></h1></header>
      <p><%= ticket.description %></p>
      <small class="created-by">By <%= ticket.creator.full_name %> <%= time_ago_in_words(ticket.created_at) %></small>
      <% unless ticket.comments.empty? %>
        <small><%= pluralize(ticket.comments.count, "comment") %></small>
      <% end %>
    </div>
  </div>
 <% end %>