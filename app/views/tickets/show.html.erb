<p id="notice"><%= notice %></p>
<h2>#<%= @ticket.id %> - <%= @ticket.name %> <small style='margin-left:10px;'><%= @ticket.status %></small></h2>

<p style='font-size: 1.2em;'>
  <%= @ticket.description %>
</p>

<hr>
<p>
  <strong>Ticket group:</strong>
  <%= @ticket.ticket_group.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @ticket.owner.full_name %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @ticket.creator.full_name %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @ticket.due_date %>
</p>
<%= render :partial => 'application/tickets', :locals => {:tickets => @tickets} %>

<%= link_to 'Edit', edit_ticket_path(@ticket) %> |
<%= link_to 'Back', tickets_path %>
