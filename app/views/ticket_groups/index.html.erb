<h1>Ticket Groups</h1>

<table class='table table-condensed table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Ticket count</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_groups.each do |ticket_group| %>
    <tr>
      <td><%= ticket_group.name %></td>
      <td><%= ticket_group.active %></td>
      <td><%= ticket_group.tickets_count %></td>
      <td><%= link_to 'Show', ticket_group %></td>
      <td><%= link_to 'Edit', edit_ticket_group_path(ticket_group) %></td>
      <td><%= link_to 'Destroy', ticket_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Ticket group', new_ticket_group_path %>
